{
   "name": "Responsive Frames",
   "description": "This extension opens the current website in a series of frames with different dimensions to analyse the website's responsiveness.",
   "version": "1.0",
   "permissions": ["tabs", "storage"],
   "background": {
     "persistent": false,
     "scripts": ["js/background.js"]
   },
    "browser_action": {
      "default_title": "Show responsive frames",
      "default_icon": "img/responsive_icon_16.png"
    },
    "options_page": "options.html",
    "icons": {
      "16": "img/responsive_icon_16.png",
      "48": "img/responsive_icon_48.png",
      "128": "img/responsive_icon_128.png"
    },
    "manifest_version": 2
}